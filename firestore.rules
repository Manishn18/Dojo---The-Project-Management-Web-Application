rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{user_id} {
      allow read, create: if request.auth != null // Allows read and create access only for authenticated users
      allow update: if request.auth.uid == user_id // Allows update access only for the authenticated user matching the user_id
    }
    match /projects/{project_id} {
      allow read, create, update: if request.auth != null; // Allows read, create, and update access if the user is authenticated
      allow delete: if request.auth.uid == resource.data.createdBy.id // Allows delete access only if the authenticated user is the project creator
    }
  }
}

// users collection
// - any authenticated user can read & create
// - only users who "own/created" a document can update it ( user id's match)

// projects collection
// - any authenticated user can read, create & update a document
// - only users who "own/created" a document can delete it